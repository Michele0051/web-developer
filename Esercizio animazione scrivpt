<script>
function uccello() {
    document.getElementById("volo").style.animation = "volo 5s 1";

}
function uccello2() {
    document.getElementById("volo").style.backgroundImage = "url('https://pngimg.com/uploads/birds/birds_PNG84.png')";
}

    function uccello3() {
    document.getElementById("volo").style.backgroundImage = "url('https://pngimg.com/uploads/birds/birds_PNG88.png')";
}

