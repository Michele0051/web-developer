 <script>
var secolo = prompt('Quanti anni sono un secolo');
   if (secolo==100)  { 
    alert('Bravo hai indovinato');
   } 
   else if (secolo<=101 && secolo>=95){
   alert('No, ma ci sei vicino');
   }
   else if (secolo<=105 && secolo>=102){
   alert('Quasi');
   }
   else  {
    alert('Sei fuori strada');
   }

 </script>




